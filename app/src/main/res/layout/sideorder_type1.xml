<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewItem1"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="4dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/sideNameView"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="BBQ Chicken Wings"
            android:textColor="@color/shopColour"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/euroSignView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/sideNameView"
            android:text="â‚¬"
            android:textColor="@color/logoYellow"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sidePriceView"
            android:layout_width="43dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/sideNameView"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/euroSignView"
            android:text="4.5"
            android:textColor="@color/logoYellow"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
