<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardViewItem1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_margin="4dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="8dp"
    app:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <TextView
            android:id="@+id/productNameView3"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="2dp"
            android:text="Coliemore Harbour Pizza"
            android:textColor="@color/shopColour"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productQuantityView3"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/productPriceView3"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/productNameView3"
            android:text="12"
            android:textColor="@color/shopColour"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productQuantitySizeView3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/productQuantityView3"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            android:layout_toEndOf="@+id/productQuantityView3"
            android:text="inch"
            android:textColor="@color/logoYellow"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productQuantityCostView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/productQuantitySizeView3"
            android:text="â‚¬"
            android:textColor="@color/shopColour"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/productPriceView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/productQuantityCostView3"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="2dp"
            android:layout_toEndOf="@+id/productQuantityCostView3"
            android:text="14.50"
            android:textColor="@color/shopColour"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/topping1View3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/productNameView3"
            android:layout_alignStart="@+id/productNameView3"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:text="Take and Bake Quality Pizza Making at"
            android:textColor="@color/logoYellow"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/topping2View3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topping1View3"
            android:layout_alignStart="@+id/topping1View3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:text="Aubergine"
            android:textColor="@color/logoYellow"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/topping3View3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/topping2View3"
            android:layout_alignStart="@+id/topping2View3"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:text="Smoked Applewood"
            android:textColor="@color/logoYellow"
            android:textSize="16dp"
            android:textStyle="bold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
